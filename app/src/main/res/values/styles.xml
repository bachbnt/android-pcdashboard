<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edit_text_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_10dp</item>
        <item name="android:layout_marginRight">@dimen/space_10dp</item>
        <item name="android:layout_marginTop">@dimen/space_5dp</item>
        <item name="android:layout_marginBottom">@dimen/space_5dp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:drawablePadding">@dimen/space_10dp</item>
        <item name="android:padding">@dimen/space_15dp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorSkyBlue</item>
    </style>

    <style name="text_view_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_5dp</item>
        <item name="android:layout_marginRight">@dimen/space_5dp</item>
        <item name="android:drawablePadding">@dimen/space_20dp</item>
        <item name="android:padding">@dimen/space_10dp</item>
        <item name="android:textColor">@color/colorSkyBlue</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
