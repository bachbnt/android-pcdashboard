<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommentDialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bot</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bot</item>
    </style>

    <style name="InfotDialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edit_text_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_10dp</item>
        <item name="android:layout_marginRight">@dimen/space_10dp</item>
        <item name="android:layout_marginTop">@dimen/space_5dp</item>
        <item name="android:layout_marginBottom">@dimen/space_5dp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:drawablePadding">@dimen/space_10dp</item>
        <item name="android:padding">@dimen/space_15dp</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="text_view_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_5dp</item>
        <item name="android:layout_marginRight">@dimen/space_5dp</item>
        <item name="android:drawablePadding">@dimen/space_20dp</item>
        <item name="android:padding">@dimen/space_10dp</item>
        <item name="android:textColor">@color/colorCold</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="button_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:paddingTop">@dimen/space_10dp</item>
        <item name="android:paddingBottom">@dimen/space_10dp</item>
        <item name="android:paddingLeft">@dimen/space_30dp</item>
        <item name="android:paddingRight">@dimen/space_30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/space_20dp</item>
    </style>
</resources>
