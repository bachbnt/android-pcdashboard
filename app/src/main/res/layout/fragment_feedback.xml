<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".Fragment.FeedbackFragment">

    <RelativeLayout
        android:id="@+id/rl_back_app_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp">

        <ImageButton
            android:id="@+id/ib_back_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_cold_32dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_back_app_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/support_top" />

            <EditText
                android:id="@+id/et_content_feedback"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="@dimen/space_50dp"
                android:layout_marginRight="@dimen/space_50dp"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:textSize="@dimen/font_size_16sp"
                android:padding="@dimen/space_10dp"
                android:background="@drawable/bg_edittext_login"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn_send_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gửi phản hồi"
                android:layout_marginTop="@dimen/space_20dp"
                style="@style/button_login"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/support_bottom" />

            <TextView
                android:id="@+id/tv_version_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>