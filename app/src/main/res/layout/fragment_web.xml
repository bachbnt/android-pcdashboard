<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GuideFragment">

    <RelativeLayout
        android:id="@+id/rl_back_web"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp"
        android:background="@drawable/bg_panel">

        <ImageButton
            android:id="@+id/ib_back_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_cold_32dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Trang chá»§"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_20sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/ib_left_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ib_right_web"
            android:src="@drawable/ic_left_cold_32dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ib_right_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_cold_32dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
    <WebView
        android:id="@+id/wv_home_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_back_web"/>

</RelativeLayout>