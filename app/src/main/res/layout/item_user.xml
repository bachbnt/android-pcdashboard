<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/space_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_layout_user_item">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_avatar_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_15dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:id="@+id/iv_avatar_user_item"
                android:layout_width="@dimen/space_50dp"
                android:layout_height="@dimen/space_50dp"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_user_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15dp"
            android:layout_toRightOf="@id/cv_avatar_user_item"
            android:text="@string/app_name"
            android:textColor="@color/colorSlateGray"
            android:textSize="@dimen/font_size_20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>