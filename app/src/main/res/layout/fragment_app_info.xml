<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FeedbackFragment"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:id="@+id/rl_back_app_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp">

        <ImageButton
            android:id="@+id/ib_back_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_cold_32dp" />
    </RelativeLayout>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/rl_back_app_info">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/info_app_top"/>
               <TextView
                   android:id="@+id/tv_version_app_info"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:paddingBottom="@dimen/space_10dp"
                   android:textSize="@dimen/font_size_20sp"
                   android:textColor="@android:color/white"
                   android:textStyle="bold" />

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="400dp"
                   android:src="@drawable/infor_app_bottom" />
           </LinearLayout>
       </ScrollView>

</RelativeLayout>