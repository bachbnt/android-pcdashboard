<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_comment"
    tools:context=".Dialog.CommentDialog">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/ib_close_comment_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/space_10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close_middle_32dp" />

    <RelativeLayout
        android:id="@+id/rl_input_comment_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/space_10dp">

        <EditText
            android:id="@+id/tv_input_comment_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:layout_toLeftOf="@id/ib_send_comment_dialog"
            android:background="@drawable/bg_edittext_login"
            android:hint="@string/write_comment"
            android:maxHeight="100dp"
            android:padding="@dimen/space_10dp"
            android:textSize="@dimen/font_size_16sp" />

        <ImageButton
            android:id="@+id/ib_send_comment_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send_middle_32dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line1_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ib_close_comment_dialog"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/rl_input_comment_dialog"
        android:background="@android:color/darker_gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line1_comment" />
</RelativeLayout>